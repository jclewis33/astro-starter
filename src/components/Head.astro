---
// src/components/Head.astro

// Destructure props with default values.
// These can be overridden on a per-page basis.
const {
  title = "PopCandi AI | Your Always On Recruiting Platform",
  description = "PopCandi.ai delivers qualified, interested, and ready-to-hire candidates before you even post a roleâ€”turning months-long searches into weeks.",
  ogImage = "",
  canonical = "https://www.popcandi.com",
  twitterTitle = title,
  twitterDescription = description,
  twitterImage = ogImage,
} = Astro.props;
---

<!-- Character Encoding -->
<meta charset="UTF-8" />

<!-- Ensure proper scaling on mobile devices -->
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Favicon and Apple Touch Icon -->
<link rel="icon" href="/images/favicon.png" type="image/x-icon" />
<link rel="apple-touch-icon" href="/images/webclip.png" />

<!-- Canonical URL: only rendered if provided -->
{canonical && <link rel="canonical" href={canonical} />}

<!-- Page Title and Meta Description for SEO -->
<title>{title}</title>
<meta name="description" content={description} />

<!-- Open Graph Meta Tags for social sharing (e.g., Facebook, LinkedIn) -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
{canonical && <meta property="og:url" content={canonical} />}
<meta property="og:image" content={ogImage} />

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:title" content={twitterTitle} />
<meta property="twitter:description" content={twitterDescription} />
<meta property="twitter:image" content={twitterImage} />

<!-- Data Prevent Flicker Remove if No Script Loaded -->

<noscript>
  <style>
    [data-prevent-flicker="true"] {
      visibility: visible !important;
    }
  </style>
</noscript>

<!-- Google tag (gtag.js) -->

<!-- GSAP SCRIPTS -->
<script
  defer
  is:inline
  src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>

<script
  defer
  is:inline
  src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"
></script>

<script
  defer
  is:inline
  src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/SplitText.min.js"></script>
