<style>
  /* Footer Styles */
  .footer {
    color: var(--theme-text-light);
    background-color: var(--theme-bg-dark-3);
  }

  /* Footer grid component */
  .footer__layout {
    display: flex;
    flex-direction: row;
    gap: -var(--gap-2rem);
    justify-content: space-between;
    width: 100%;
  }

  /* Footer Logo  */

  .footer__logo-wrapper {
    display: inline-block;
    max-width: 12rem;
  }

  .footer__logo-wrapper .footer__logo {
    height: auto;
    width: 100%;
  }

  /* Footer navigation links */
  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    /* grid-template-columns: 1fr 1fr;
    justify-content: start; */
    column-gap: var(--gap-3rem);
    row-gap: var(--gap-1rem);
  }

  .footer__nav-item-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--size-1rem);
  }

  .footer__nav-item {
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__nav-item:hover {
    opacity: 0.8;
  }

  /* Footer Contact Icon Wrapper */
  .footer__contact-icon-wrapper {
    display: flex;
    gap: 1rem;
  }

  /* Footer Icon Wrapper */

  .footer__icon-wrapper {
    width: 1.5rem;
    height: 1.5rem;
    transition: opacity 0.3s ease;
  }

  .footer__icon-wrapper:hover {
    opacity: 0.8;
  }

  /* Footer Bottom Layout */

  .footer__bottom-layout {
    display: flex;
    flex-direction: column;
    margin-top: var(--size-4rem);
  }

  /* Footer Divider */
  .footer__divider {
    width: 100%;
    background-color: var(--border-color-light);
    height: 1px;
    margin-bottom: var(--size-1rem);
  }

  .footer__details-wrapper {
    display: flex;
    justify-content: space-between;
  }

  /* Responsive Styles */
  @media (max-width: 640px) {
    .footer__layout {
      flex-direction: column;
      gap: var(--gap-3rem);
    }
  }
</style>

<!-- Ensures the year stays insync -->

<script>
  const yearElement = document.querySelector(".year");
  if (yearElement) {
    yearElement.textContent = new Date().getFullYear().toString();
  }
</script>
